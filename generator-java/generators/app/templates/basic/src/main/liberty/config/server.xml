<server description="Sample Liberty server">

  <featureManager>
      <feature>jaxrs-2.0</feature>
      <feature>jsonp-1.0</feature>
      <feature>jndi-1.0</feature>
      <feature>cdi-1.2</feature>
  </featureManager>

  <httpEndpoint httpPort="${default.http.port}" httpsPort="${default.https.port}"
      id="defaultHttpEndpoint" host="*" />

  {{#bluemix}}
  {{#cloudant}}
  <jndiEntry jndiName="cloudant/url" value="${env.CLOUDANT_URL}"/>
  <jndiEntry jndiName="cloudant/username" value="${env.CLOUDANT_USERNAME}"/>
  <jndiEntry jndiName="cloudant/password" value="${env.CLOUDANT_PASSWORD}"/>
  {{/cloudant}}
  {{#objectStorage}}
  <jndiEntry jndiName="objectstorage/auth_url" value=""/>
  <jndiEntry jndiName="objectstorage/username" value=""/>
  <jndiEntry jndiName="objectstorage/password" value=""/>
  <jndiEntry jndiName="objectstorage/domain" value=""/>
  <jndiEntry jndiName="objectstorage/project" value=""/>
  {{/objectStorage}}
  {{/bluemix}}

</server>
